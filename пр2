// пользователь для интернет магазина
public class User
{
    // свойства пользователя 
    public string FirstName { get; set; }
    public string LastName { get; set; }
    public string Email { get; set; }
    public int Age { get; set; }

    //отображение информации о пользователе
    public void Print()
    {
        Console.WriteLine($"Имя: {FirstName} {LastName}");
        Console.WriteLine($"Email: {Email}");
        Console.WriteLine($"Возраст: {Age}");
    }

    //умножение
}public class Multiplication
{
    public int Multiply(int a, int b)
    {
        return a * b;
    }

    public void PrintMultiplication(int a, int b)
    {
        int result = Multiply(a, b);  
        Console.WriteLine($"Умножение: {result}");
    }
}



class Program
{
    static void Main(string[] args)
    {
        //  создаем нового пользователя
        User user = new User()
        {
            FirstName = "Вероника",
            LastName = "Спиридович",
            Email = "uia@mail.ru",
            Age = 18
        };

        user.Print(); //выводим все о нем


        //выводим умножение
        Multiplication calc = new Multiplication();

        int a = Convert.ToInt32(Console.ReadLine());
        int b = Convert.ToInt32(Console.ReadLine());
        int product = calc.Multiply(a, b);
        Console.WriteLine($"Результат умножения: " + product);



    }
}
